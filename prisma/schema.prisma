generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:.dev.db"
}

model carnets {
  id Int @id @default(autoincrement())
  estado Boolean
  vendedores vendedores []
}

model vendedores {
  id Int @id @default(autoincrement())
  name String
  lastname String
  contrase√±a String
  carnet_id Int 
  carnet carnets @relation(fields: [carnet_id], references:[id])
}



//Modelos de autenticacion

model estado {
  id Int @id @default(autoincrement())
  estado String
  usuarios usuarios []
}

model usuarios {
 id Int @id @default(autoincrement())
 username String @unique
 email String @unique
 password String 
 estado_id Int
  estado estado @relation(fields: [estado_id], references:[id])
}